# ============================================
# Backend Environment Configuration
# ============================================
# Copy this file to .env and adjust values as needed
# ============================================

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=1
DEBUG=false

# GPU Configuration
# Set USE_GPU=false to run on CPU only
USE_GPU=true
CUDA_VISIBLE_DEVICES=0

# Model Configuration
# Options: resnet50, resnet152, efficientnet_b0, efficientnet_b4
MODEL_NAME=resnet50
MODEL_WEIGHTS_PATH=
BATCH_SIZE=8

# API Configuration
# Comma-separated list of allowed CORS origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5174,http://localhost:5175
API_PREFIX=/api/v1

# Upload Configuration
# MAX_FILE_SIZE in bytes (default: 10MB = 10485760)
MAX_FILE_SIZE=10485760
MAX_BATCH_SIZE=20

# Logging Configuration
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
